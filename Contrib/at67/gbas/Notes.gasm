                    LDI                     0
                    POKE                    register0                       ; poke &h7c,0

_24                 LDWI                    125
                    STW                     register0
                    LDI                     147
                    POKE                    register0                       ; poke &h7d,147:'INC &h79

_25                 LDWI                    126
                    STW                     register0
                    LDI                     121
                    POKE                    register0                       ; poke &h7e,&h79

_26                 LDWI                    127
                    STW                     register0
                    LDI                     255
                    POKE                    register0                       ; poke &h7f,255:'RET

_30                 LDI                     1
                    STW                     _n                              ; for n=1 to 95

_31                 PrintString             _str_0xff00
                    PrintVarInt16           _n
                    LDWI                    newLineScroll
                    CALL                    giga_vAC                        ; print "Playing note",n

_32                 LDW                     _n
                    ADDW                    _n
                    STW                     0xc0
                    LDWI                    121
                    STW                     register0
                    LDW                     0xc0
                    POKE                    register0                       ; poke &h79,n+n:'$900+n*2

_33                 LDI                     0x78
                    CALL                    giga_vAC
                    POKE                    _p                              ; poke p,  usr(&h78):'Flo

_34                 LDW                     _p
                    ADDI                    1
                    STW                     0xc0
                    STW                     0x82
                    LDWI                    _page_0x0300
                    CALL                    giga_vAC
_page_0x0300        LDW                     0x82
                    LDI                     0x78
                    CALL                    giga_vAC
                    POKE                    0xc0                            ; poke p+1,usr(&h78):'Fhi

_35                 LDWI                    44
                    STW                     register0
                    LDI                     15
                    POKE                    register0                       ; poke 44,15:'0.25 secs

_36                 LDI                     0x2c
                    PEEK                    
                    JumpGT                  _37 0
                    LDWI                    _36
                    CALL                    giga_vAC                        ; if peek(44)&>0 then goto 36

_37                 ForNextLoopUp           _n _31 95                       ; next n

_end_0x0334         BRA                     _end_0x0334                     ; END



