; Code
_entryPoint_        InitRealTimeProc        
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                
                    Initialise                                              ; INIT

_10                 LDI                     1
                    STW                     _c                              ; for c=1 to 4

_11                 LDW                     _c
                    STW                     mathX
                    LDWI                    256
                    STW                     mathY
                    LDWI                    multiply16bit
                    CALL                    giga_vAC
                    ADDI                    252
                    STW                     _p                              ; p=c*256+252

_12                 LDW                     _p
                    SUBI                    1
                    STW                     0xc0
                    LDI                     2
                    POKE                    0xc0                            ; poke p-1,2:'Pulse

_13                 LDI                     0
                    POKE                    _p
                    LDW                     _p
                    ADDI                    1
                    STW                     0xc0
                    LDI                     0
                    POKE                    0xc0                            ; poke p,0:poke p+1,0

_14                 ForNextLoopUp           _c _11 4                        ; next c

_20                 LDWI                    120
                    STW                     register0
                    LDI                     17
                    POKE                    register0                       ; poke &h78,17:'LDWI $9xx

_21                 LDWI                    122
                    STW                     register0
                    LDI                     9
                    POKE                    register0                       ; poke &h7a,9

_22                 LDWI                    123
                    STW                     register0
                    LDI                     127
                    POKE                    register0                       ; poke &h7b,127:'LUP 0

_23                 LDWI                    124
