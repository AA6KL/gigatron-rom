_entryPoint_        LDI                     0x28
                    STW                     romType
                    RomCheck                
                    InitRealTimeProc        
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                
                    Initialise                                              ; INIT

                    ClearVertBlinds         
                    LDI                     2
                    STW                     graphicsMode
                    ScanlineMode                                            ; cls : mode 2

_loop               Rand                    
                    ANDI                    63
                    ST                      163                             ; poke 163, rnd(0) AND &h3F

                    LDI                     0xa0
                    RandMod                 
                    STW                     _ox
                    LDI                     0x78
                    RandMod                 
                    STW                     _oy                             ; ox = rnd(160) : oy = rnd(120)

                    LDW                     _ox
                    ST                      cursorXY
                    LDW                     _oy
                    ST                      cursorXY + 1
                    AtTextCursor                                            ; at ox, oy

                    LDI                     0
                    STW                     _i                              ; for i=0 &to POLYSIZE*2 - 4 step 2

_next_0x028c        LDWI                    1536
                    ADDW                    _i
                    STW                     0xc0
                    LDI                     0xa0
                    RandMod                 
                    POKE                    0xc0                            ; poke POLYADDR + 0 + i, rnd(160)

                    LDWI                    1537
                    ADDW                    _i
                    STW                     0xc0
                    LDI                     0x78
                    RandMod                 
                    POKE                    0xc0                            ; poke POLYADDR + 1 + i, rnd(120)

                    ForNextAdd              _i _next_0x028c 6 2             ; next i

                    LDWI                    1544
                    STW                     register0
                    LDW                     _ox
                    POKE                    register0                       ; poke POLYADDR + 8, ox

                    LDWI                    1545
                    STW                     register0
                    LDW                     _oy
                    POKE                    register0                       ; poke POLYADDR + 9, oy

                    LDWI                    1536
                    STW                     drawPoly_addr
                    DrawPoly                                                ; poly POLYADDR

                    BRA                     _loop                           ; goto &loop

_end_0x02e1         BRA                     _end_0x02e1                     ; end

_end_0x02e3         BRA                     _end_0x02e3                     ; END



