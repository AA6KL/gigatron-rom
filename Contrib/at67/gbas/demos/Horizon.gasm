                    LDW                     _fade
                    ADDI                    1
                    STW                     _fade                           ; fade = fade + 1

                    LDW                     _fade
                    SUBW                    _decay
                    JumpEQ                  _else_0x033f 0
                    LDW                     _cIndex
                    ADDI                    1
                    STW                     _cIndex
                    LDI                     0
                    STW                     _fade
                    LDW                     _decay
