_endif_0x0383       LDI                     80
                    STW                     mathX
                    LDW                     _pitch
                    STW                     mathY
                    LDWI                    divide16bit
                    CALL                    giga_vAC
                    LDW                     mathRem
                    STW                     _i                              ; i = 80 % pitch

                    LDW                     _y
                    ADDI                    8
                    STW                     0xc0
                    LD                      0xc0
                    ST                      _a + 1                          ; a = ((y + 8) LSL 8)

                    LDI                     0
                    STW                     _x
                    LDW                     _pitch
                    ADDI                    159
                    STW                     0xb4
                    LDI                     1
                    STW                     0xb6                            ; for x=0 to pitch + 159

_next_0x03ba        LDW                     _i
                    BNE                     _else_0x03cf                    ; if i &&= 0

                    LDW                     _pitch
                    SUBI                    1
                    STW                     _i
                    BRA                     _endif_0x03d7                   ; i = pitch - 1

_else_0x03cf        LDW                     _i
                    SUBI                    1
                    STW                     _i                              ; i = i - 1

_endif_0x03d7       LDW                     _i
                    ADDW                    _i
                    SUBW                    _pitch
                    BLT                     _else_0x03f2                    ; if i+i &&>= pitch

                    LDW                     _color1
                    XORW                    _j
                    STW                     _p
                    BRA                     _endif_0x03fa                   ; p = color1 XOR j

_else_0x03f2        LDW                     _color2
                    XORW                    _j
                    STW                     _p                              ; p = color2 XOR j

_endif_0x03fa       LDW                     _a
                    ADDW                    _x
                    STW                     0xc0
                    LDW                     _p
                    POKE                    0xc0                            ; poke a+x,p

                    ForNextFarVarPos        _x _next_0x03ba 0xb4 0xb6       ; next x

                    LDW                     _y
                    ADDW                    _y
                    STW                     0xc0
                    LDWI                    505
                    STW                     register0
                    LDW                     0xc0
                    POKE                    register0                       ; poke &h01F9, y+y

                    ForNextFarVarNeg        _y _next_0x02ee 0xb0 0xb2       ; next y

                    LDWI                    505
                    STW                     register0
                    LDI                     0
                    POKE                    register0                       ; poke &h01F9, 0

                    LDI                     0
                    STW                     _x
                    LDI                     8
                    STW                     _v                              ; x=0 : v=8

_loop               LDW                     _x
                    ANDI                    255
                    STW                     _i                              ; i = x AND 255

                    LDI                     0
                    STW                     _j                              ; j = 0

                    LDWI                    496
                    STW                     _q                              ; q = &h0100 + 240

                    LDW                     _horizonY
                    STW                     _yy                             ; yy = horizonY

                    LDWI                    _calcPitch
                    CALL                    giga_vAC                        ; gosub calcPitch

                    LDI                     0
                    STW                     0xde
                    LDWI                    _page_0x0400
                    CALL                    giga_vAC
_page_0x0400        LDW                     0xde
                    STW                     _y
                    LDW                     _pitch
                    STW                     0xb0
                    LDI                     1
                    STW                     0xb2                            ; for y=0 to pitch

_next_0x046a        LDW                     _j
                    ADDW                    _i
                    STW                     _j                              ; j = j + i

                    ForNextFarVarPos        _y _next_0x046a 0xb0 0xb2       ; next y

                    LDW                     _i
                    ADDW                    _i
                    STW                     _i                              ; i = i + i

                    LDWI                    257
                    ADDW                    _horizonY
                    ADDW                    _horizonY
                    STW                     _p                              ; p = &h0101 + horizonY + horizonY

                    WaitVBlank                                              ; wait

_repeat_0x049e      LD                      _j + 1
                    POKE                    _p                              ; poke p, j LSR 8

                    LDW                     _j
                    ANDI                    255
                    ADDW                    _i
                    STW                     _j                              ; j = i + (j AND 255)

                    LDW                     _p
                    ADDI                    4
                    STW                     _p
                    SUBW                    _q
                    JumpGE                  _repeat_0x049e 7                ; p = p + 4 : until p &>= q

                    LD                      0x11
