                    STW                     _decay                          ; if fade &= decay then cIndex = cIndex + 1 : fade = 0 : decay = decay LSR 1

_else_0x033f        LDW                     _y
                    STW                     _yy                             ; yy = y

                    LDWI                    _calcPitch
                    CALL                    giga_vAC                        ; gosub calcPitch

                    LDW                     _y
                    SUBW                    _horizonY
                    ADDI                    40
                    STW                     0xc0
                    LDWI                    400
                    STW                     mathX
                    LDW                     0xc0
                    STW                     mathY
                    LDWI                    divide16bit
                    CALL                    giga_vAC
                    ANDI                    1
