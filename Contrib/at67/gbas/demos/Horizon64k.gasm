                              STW                               _y
                              LDW                               _pitch
                              STW                               0xb0
                              LDI                               1
                              STW                               0xb2                            ; for y=0 &to pitch

_next_0x047c                  LDW                               _j
                              ADDW                              _i
                              STW                               _j                              ; j = j + i

                              ForNextVarAdd                     _y _next_0x047c 0xb0 0xb2       ; next y

