_page_0x0400                  LDW                               0xe2
                              STW                               _x
                              LDI                               8
                              STW                               _v                              ; x=0 : v=8

_loop                         LDW                               _x
                              ANDI                              255
                              STW                               _i                              ; i = x AND 255

                              LDI                               0
                              STW                               _j                              ; j = 0

                              LDWI                              496
                              STW                               _q                              ; q = &h0100 + 240

                              LDI                               32
                              STW                               _yy                             ; yy = horizonY

                              LDWI                              _calcPitch
