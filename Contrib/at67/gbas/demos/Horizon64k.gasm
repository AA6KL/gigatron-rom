                              LDWI                              _loop
                              CALL                              giga_vAC                        ; goto loop

_254                          PUSH                              
                              LDW                               _v
                              ADDI                              1
                              STW                               _v
                              SUBI                              32
                              BLE                               _else_0x0500
                              LDI                               32
                              STW                               _v                              ; v = v + 1 : if v &&> 32 then v = 32

_else_0x0500                  Return                                                            ; return

_253                          PUSH                              
                              LDW                               _v
                              SUBI                              1
                              STW                               _v
                              LDWI                              -32
                              SUBW                              _v
                              BLT                               _else_0x051c
                              LDWI                              -32
                              STW                               _v                              ; v = v - 1 : if v &&< -32 then v = -32

_else_0x051c                  Return                                                            ; return

_191                          PUSH                              
                              LDI                               0
                              STW                               _v
                              Return                                                            ; v = 0 : return

_127                          PUSH                              
                              LDI                               0
                              STW                               _v
                              Return                                                            ; v = 0 : return

_calcPitch                    PUSH                              
                              LDWI                              -23
                              ADDW                              _yy
                              STW                               _pitch                          ; pitch = yy + (96 - 120 + 1)

                              LDW                               _pitch
                              ADDI                              1
                              STW                               0xc0
                              LDWI                              0xfffe
                              ANDW                              0xc0
                              STW                               _pitch                          ; pitch = (pitch + 1) AND &hfffe

                              Return                                                            ; return

