_startAddress_  EQU		0x0200
clearRegion     EQU     0x7fa0
resetVideoTable EQU     clearRegion - 0x0100
clearCursorRow  EQU     clearRegion - 0x0200
printText       EQU     clearRegion - 0x0300
printDigit      EQU     clearRegion - 0x0400
printVarInt16   EQU     clearRegion - 0x0500
printChar       EQU     clearRegion - 0x0600
printHexByte    EQU     clearRegion - 0x0700
newLineScroll   EQU     clearRegion - 0x0800
resetAudio      EQU     clearRegion - 0x0900
playMidi        EQU     clearRegion - 0x0A00
midiStartNote   EQU     clearRegion - 0x0B00

; Internal variables
register0       EQU     0x00a0
register1       EQU     register0 + 0x02
register2       EQU     register0 + 0x04
register3       EQU     register0 + 0x06
register4       EQU     register0 + 0x08
register5       EQU     register0 + 0x0A
register6       EQU     register0 + 0x0C
register7       EQU     register0 + 0x0E
register8       EQU     register0 + 0x10
register9       EQU     register0 + 0x12
textColour      EQU     register0 + 0x14
cursorXY        EQU     register0 + 0x16
midiStreamPtr   EQU     register0 + 0x18
midiDelay       EQU     register0 + 0x1A
frameCountPrev  EQU     register0 + 0x1C

; Includes
%include include/gigatron.i
%include include/audio.i
%include include/clear_screen.i
%include include/print_text.i
%include include/macros.i

; Labels
_entryPoint_    EQU		0x0200
_10             EQU		0x0234
_test           EQU		0x02e6
_Big            EQU		0x0446
_next4          EQU		0x0239
_next5          EQU		0x023e
_next12         EQU		0x02cf
_end_14         EQU		0x02e4
0x0300          EQU		0x0300
0x0400          EQU		0x0400

; Variables
_z              EQU		0x0030
_b              EQU		0x0032
_a              EQU		0x0034
_i              EQU		0x0036
_j              EQU		0x0038
_ii             EQU		0x003a

; Strings
usrStr_0x6ea0		EQU		0x6ea0
usrStr_0x6ea0		DB		1 ' '
usrStr_0x6da2		EQU		0x6da2
usrStr_0x6da2		DB		23 'lalalalala2345534563465'

; Code
_entryPoint_    Initialise	                        		; INIT
                LDI		33
                STW		_z                          		; let z = 33
                STW		_b                          		; b=z

_10             LDWI	0
                STW		_i                          		; for i = 0 to 2

_next4          LDWI	0
                STW		_j                          		; for j = 0 to 2

_next5          LDWI	_test
                CALL	giga_vAC                    		; gosub   test

                ForNextLoopP	_j _next5 2         		; next j

                ForNextLoopP	_i _next4 2         		; next i

                PrintVarChar	_b
                PrintString	usrStr_0x6ea0
                LD		_b
                PEEK	
                PrintAcHexByte	
                PrintString	usrStr_0x6ea0
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print chr$(b);" ";peek(0x21);" "

                LDI		80
                PrintAcHexByte	
                PrintString	usrStr_0x6ea0
                LDWI	-8531
                PrintAcHexWord	
                PrintString	usrStr_0x6ea0
                LDWI	-16657
                PrintAcHexWord	
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hex$(80);" ";hexw$(0xdead);" ";hexw$(0xbeef)

                LDWI	0
                STW		_ii                         		; for ii = 0 to 3

_next12         LDWI	_Big
                CALL	giga_vAC                    		; gosub Big

                ForNextLoopP	_ii _next12 3       		; next ii

_end_14         BRA		_end_14                     		; END

_test           PUSH	
                LDW		_i
                ADDI	40
                STW		0xd0
                LDWI	0x0300
                CALL	giga_vAC

0x0300          PrintVarHexByte	0xd0
                PrintString	usrStr_0x6ea0
                LDW		_j
                ADDI	30
                STW		0xd2
                PrintVarHexByte	0xd2
                PrintString	usrStr_0x6ea0
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hex$(i+40);" ";hex$(j+30);" "

                LDW		_i
                ADDI	30
                STW		0xd0
                PrintVarHexByte	0xd0
                PrintString	usrStr_0x6ea0
                LDW		_j
                ADDI	40
                STW		0xd2
                PrintVarHexByte	0xd2
                PrintString	usrStr_0x6ea0
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hex$(i+30);" ";hex$(j+40);" "

                PrintInt16	0x003d
                PrintString	usrStr_0x6ea0
                PrintVarInt16	_i
                PrintString	usrStr_0x6ea0
                PrintVarInt16	_j
                PrintString	usrStr_0x6ea0
                LDW		_j
                ADDI	23
                STW		0xd0
                PrintVarInt16	0xd0
                PrintString	usrStr_0x6ea0
                LDW		_i
                ADDI	55
                STW		0xd2
                PrintVarInt16	0xd2
                PrintString	usrStr_0x6ea0
                LDW		_i
                ADDW	_j
                STW		0xd4
                PrintVarInt16	0xd4
                PrintString	usrStr_0x6ea0
                LDW		_i
                SUBW	_j
                STW		0xd6
                LDWI	0x0400
                CALL	giga_vAC

0x0400          PrintVarInt16	0xd6
                PrintString	usrStr_0x6ea0
                LDW		_i
                SUBW	_j
                ADDI	1
                STW		0xd8
                PrintVarInt16	0xd8
                PrintString	usrStr_0x6ea0
                LDW		_i
                ADDW	_j
                ADDW	_j
                STW		0xda
                PrintVarInt16	0xda
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print 20*3+1;" ";i;" ";j;" ";j+23;" ";i+55;" ";i+j;" ";i-j;" ";i-j+1;" ";i+j+j

                POP		
                RET		                            		; return

_Big            PUSH	
                LDWI	0x0021
                PEEK	
                STW		_a                          		; a = peek(0x21) rem AND 0xFC

                PrintVarHexByte	_a
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hex$(a)

                LDWI	-1
                PrintAcHexWord	
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hexw$(0xAA55 ^ 0x55AA)

                PrintInt16	0x0038
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print 56

                LDWI	-8531
                PrintAcHexWord	
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hexw$(0xdead)

                LDWI	-28785
                PrintAcHexWord	
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print hexw$(0b0000111100001111 | 0b1000000010000000)

                PrintString	usrStr_0x6da2
                LDWI	newLineScroll
                CALL	giga_vAC                    		; print "lalalalala2345534563465"

                POP		
                RET		                            		; return

