                    LDI                     2
                    RandMod                 
                    ADDI                    2
                    STW                     0xc4
                    LDWI                    0xff97
                    PEEK                    
                    ADDW                    0xc4
                    ADDI                    27
                    STW                     _a                              ; a = rnd(len(dog)) + len(dog) + len(cat$) + 27

                    LDI                     53
                    ADDI                    9
                    STW                     _b                              ; b = len(big$) + len(a) + len(chr$(65)) + len(hex$(256)) + len(HEXW$(65000))

                    LDWI                    newLineScroll
                    CALL                    giga_vAC                        ; print

                    PrintVarInt16           _a
                    PrintString             _str_0xfe0d
                    PrintVarInt16           _b
                    LDWI                    newLineScroll
                    CALL                    giga_vAC                        ; print a.lo;" ";b

_end_0x031e         BRA                     _end_0x031e                     ; end



