; Code
_entryPoint_        InitRealTimeProc        
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                
                    Initialise                                              ; INIT

                    LDI                     1
                    STW                     _a                              ; a = 1

                    LDI                     1
                    ST                      _a + 1
                    LDI                     0
                    ST                      _a                              ; a.hi = 1 : a.lo = 0

                    LD                      _a + 1
                    ADDI                    1
                    STW                     _b                              ; b = a.hi + 1

                    LDWI                    224
                    STW                     register0
                    LD                      _a
                    POKE                    register0                       ; poke &h00E0, a.lo

                    LD                      _b + 1
                    STW                     mathX
                    LDI                     3
                    STW                     mathY
                    LDWI                    multiply16bit
                    CALL                    giga_vAC
                    STW                     0xc0
                    LD                      _a
                    SUBW                    0xc0
                    ADDI                    1
                    SUBW                    _a
                    STW                     0xc2
                    LDWI                    224
                    STW                     register0
                    LDW                     0xc2
                    DOKE                    register0                       ; doke &h00E0, a.lo - b.hi * 3 + 1 - a

                    LDWI                    clearVertBlinds
                    CALL                    giga_vAC                        ; cls

                    LDI                     0
                    STW                     _dog                            ; dog=0 : cat$="cat"

                    PrintString             _str_0xfff7
