; Labels
_entryPoint_        EQU                     0x0200
_1                  EQU                     0x023d
_2                  EQU                     0x023d
_3                  EQU                     0x023d
_10                 EQU                     0x023d
_19                 EQU                     0x0245
_20                 EQU                     0x0245
_29                 EQU                     0x0257
_30                 EQU                     0x0257
_40                 EQU                     0x0269
_50                 EQU                     0x02c2
_60                 EQU                     0x02cc
_end_0x0319         EQU                     0x02d1

; Variables
_x                  EQU                     0x0030
_y                  EQU                     0x0032

; Strings
str_0x7fa0          EQU                     0x7fa0
str_0x7fa0          DB                      9 'Gigatron!'

; Define Bytes

; Lookup Tables

; Code
_entryPoint_        InitRealTimeProc        
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                
                    Initialise                                              ; INIT

_10                 LDI                     107
                    STW                     _x
                    LDI                     113
                    STW                     _y                              ; x=160-6*9+1:y=120-8+1

_20                 Rand                    
                    ANDI                    63
                    STW                     0xc2
                    LDWI                    164
                    STW                     register0
                    LD                      0xc2
                    POKE                    register0                       ; poke 164,rnd(0) AND 63

_30                 Rand                    
                    ANDI                    63
                    STW                     0xc0
                    LDWI                    165
                    STW                     register0
                    LD                      0xc0
                    POKE                    register0                       ; poke 165,rnd(0) AND 63

_40                 Rand                    
                    ANDI                    63
                    STW                     0xc0
                    Rand                    
                    ANDI                    31
                    ADDW                    0xc0
                    STW                     0xc2
                    Rand                    
                    ANDI                    7
                    ADDW                    0xc2
                    STW                     0xc4
                    Rand                    
                    ANDI                    7
                    ADDW                    0xc4
                    ST                      cursorXY
                    Rand                    
                    ANDI                    63
                    STW                     0xc8
                    Rand                    
                    ANDI                    31
                    ADDW                    0xc8
                    STW                     0xca
                    Rand                    
                    ANDI                    15
                    ADDW                    0xca
                    STW                     0xcc
                    Rand                    
                    ANDI                    3
                    ADDW                    0xcc
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC                        ; at (rnd(0) AND &h3F) + (rnd(0) AND &h1F) + (rnd(0) AND &h07) + (rnd(0) AND &h07), (rnd(0) AND &h3F) + (rnd(0) AND &h1F) + (rnd(0) AND &h0F) + (rnd(0) AND &h03)

_50                 PrintString             str_0x7fa0                      ; print "Gigatron!";

_60                 LDWI                    _20
                    CALL                    giga_vAC                        ; goto 20

_end_0x0319         BRA                     _end_0x0319                     ; END



