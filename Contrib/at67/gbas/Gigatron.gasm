_startAddress_      EQU                     0x0200

; Internal variables
register0           EQU                     0x0084
register1           EQU                     register0 + 0x02
register2           EQU                     register0 + 0x04
register3           EQU                     register0 + 0x06
register4           EQU                     register0 + 0x08
register5           EQU                     register0 + 0x0A
register6           EQU                     register0 + 0x0C
register7           EQU                     register0 + 0x0E
register8           EQU                     register0 + 0x10
register9           EQU                     register0 + 0x12
register10          EQU                     0x0024
register11          EQU                     0x0026
register12          EQU                     0x0028
register13          EQU                     0x002A
fgbgColour          EQU                     register0 + 0x14
cursorXY            EQU                     register0 + 0x16
midiStreamPtr       EQU                     register0 + 0x18
midiDelay           EQU                     register0 + 0x1A
frameCountPrev      EQU                     register0 + 0x1C
miscFlags           EQU                     register0 + 0x1E

; Includes
%include            include/gigatron.i
%include            include/macros.i

; Labels
_entryPoint_        EQU                     0x0200
_1                  EQU                     0x022f
_2                  EQU                     0x022f
_3                  EQU                     0x022f
_10                 EQU                     0x022f
_19                 EQU                     0x0237
_20                 EQU                     0x0237
_29                 EQU                     0x0249
_30                 EQU                     0x0249
_40                 EQU                     0x025b
_50                 EQU                     0x02b4
_60                 EQU                     0x02be
_end_0x030b         EQU                     0x02c3

; Variables
_x                  EQU                     0x0030
_y                  EQU                     0x0032

; Strings
str_0x7fa0          EQU                     0x7fa0
str_0x7fa0          DB                      9 'Gigatron!'

; Lookup Tables

; Code
_entryPoint_        Initialise              
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                                                ; INIT

_10                 LDI                     107
                    STW                     _x
                    LDI                     113
                    STW                     _y                              ; x=160-6*9+1:y=120-8+1

_20                 Random                  
                    ANDI                    63
                    STW                     0xc0
                    LDWI                    152
                    STW                     register0
                    LD                      0xc0
                    POKE                    register0                       ; poke 152,rnd AND 63

_30                 Random                  
                    ANDI                    63
                    STW                     0xc0
                    LDWI                    153
                    STW                     register0
                    LD                      0xc0
                    POKE                    register0                       ; poke 153,rnd AND 63

_40                 Random                  
                    ANDI                    63
                    STW                     0xc0
                    Random                  
                    ANDI                    31
                    ADDW                    0xc0
                    STW                     0xc2
                    Random                  
                    ANDI                    7
                    ADDW                    0xc2
                    STW                     0xc4
                    Random                  
                    ANDI                    7
                    ADDW                    0xc4
                    ST                      cursorXY
                    Random                  
                    ANDI                    63
                    STW                     0xc8
                    Random                  
                    ANDI                    31
                    ADDW                    0xc8
                    STW                     0xca
                    Random                  
                    ANDI                    15
                    ADDW                    0xca
                    STW                     0xcc
                    Random                  
                    ANDI                    3
                    ADDW                    0xcc
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC                        ; at (rnd AND &h3F) + (rnd AND &h1F) + (rnd AND &h07) + (rnd AND &h07), (rnd AND &h3F) + (rnd AND &h1F) + (rnd AND &h0F) + (rnd AND &h03)

_50                 PrintString             str_0x7fa0                      ; print "Gigatron!";

_60                 LDWI                    _20
                    CALL                    giga_vAC                        ; goto 20

_end_0x030b         BRA                     _end_0x030b                     ; END



