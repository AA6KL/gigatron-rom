_blamo              PUSH                    
                    LDWI                    23205
                    STW                     _b                              ; b = &haa55 XOR &hF0F0

                    LDW                     _b
                    XORW                    _a
                    STW                     _b                              ; b = b XOR a

                    LDI                     0
                    STW                     _i                              ; for i = 0 to 10

_next_0x03b7        LDWI                    str_0x7fa0
                    STW                     _c                              ; c = CHR$(32)

                    LDI                     0x00
                    PEEK                    
                    STW                     _f                              ; f = peek(0)

                    STW                     0x82
                    LDWI                    _page_0x0aa0
                    CALL                    giga_vAC
_page_0x0aa0        LDW                     0x82
                    LDWI                    0xaa55
                    ANDW                    _c
                    ANDW                    _a
                    STW                     _d                              ; d = c AND &hAA55 AND a

                    LDW                     _a
                    ADDI                    5
                    ADDW                    _b
                    STW                     _z                              ; z = a + 5 + b

                    LDI                     0
                    SUBW                    _b
                    STW                     _b                              ; b = -b

                    PrintVarInt16           _i
                    PrintString             str_0x7fa0
                    LDW                     _b
                    PrintAcHexWord          
                    LDWI                    newLineScroll
                    CALL                    giga_vAC                        ; print i; " " ; hexw$(b)

                    ForNextLoopUp           _i _next_0x03b7 10              ; next i

                    LDWI                    -1
                    SUBW                    _g
                    STW                     0xc0
                    LDW                     _z
                    SUBW                    0xc0
                    STW                     _g                              ; g = z - NOT g

                    STW                     0x82
                    LDWI                    _page_0x0ba0
                    CALL                    giga_vAC
_page_0x0ba0        LDW                     0x82
                    LDWI                    -1
                    SUBW                    _a
                    SUBW                    _d
                    STW                     _h                              ; h = NOT a - d

                    POP                     
                    RET                                                     ; return

_end_0x0437         BRA                     _end_0x0437                     ; END



