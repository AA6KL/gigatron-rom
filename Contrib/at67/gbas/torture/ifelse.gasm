; Includes
%include            include/gigatron.i
%include            include/macros.i

; Labels
_entryPoint_        EQU                     0x0200
_loop               EQU                     0x0247
_elseif_0x0272      EQU                     0x026c
_elseif_0x0296      EQU                     0x028c
_else_0x02ba        EQU                     0x02ac
_endif_0x02d1       EQU                     0x02c3
_end_0x02d6         EQU                     0x02c8

; Variables
_p                  EQU                     0x0030

; Strings
_str_0x7ea0          EQU                     0x7ea0
_str_0x7ea0          DB                      5 'one  '
_str_0x7ea6          EQU                     0x7ea6
_str_0x7ea6          DB                      5 'two  '
_str_0x7eac          EQU                     0x7eac
_str_0x7eac          DB                      5 'three'
_str_0x7eb2          EQU                     0x7eb2
_str_0x7eb2          DB                      5 'none '

; Define Bytes

; Lookup Tables

; Code
_entryPoint_        InitRealTimeProc        
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                
                    Initialise                                              ; INIT

                    LDWI                    clearVertBlinds
                    CALL                    giga_vAC                        ; cls

_loop               LDI                     0x0f
                    PEEK                    
                    STW                     _p                              ; p=peek(15)

                    LDW                     _p
                    SUBI                    49
                    BNE                     _elseif_0x0272                  ; if p &&= 49

                    LDI                     2
                    ST                      cursorXY
                    LDI                     40
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC
                    PrintString             _str_0x7ea0
                    BRA                     _endif_0x02d1                   ; at 2,40 : print "one  ";

_elseif_0x0272      LDW                     _p
                    SUBI                    50
                    BNE                     _elseif_0x0296                  ; elseif p &&= 50

                    LDI                     2
                    ST                      cursorXY
                    LDI                     40
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC
                    PrintString             _str_0x7ea6
                    BRA                     _endif_0x02d1                   ; at 2,40 : print "two  ";

_elseif_0x0296      LDW                     _p
                    SUBI                    51
                    BNE                     _else_0x02ba                    ; elseif p &&= 51

                    LDI                     2
                    ST                      cursorXY
                    LDI                     40
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC
                    PrintString             _str_0x7eac
                    BRA                     _endif_0x02d1                   ; at 2,40 : print "three";

_else_0x02ba        LDI                     2
                    ST                      cursorXY
                    LDI                     40
                    ST                      cursorXY + 1
                    LDWI                    atTextCursor
                    CALL                    giga_vAC
                    PrintString             _str_0x7eb2                     ; at 2,40 : print "none ";

_endif_0x02d1       LDWI                    _loop
                    CALL                    giga_vAC                        ; goto loop

_end_0x02d6         BRA                     _end_0x02d6                     ; END



