_startAddress_      EQU                     0x0200

; Internal variables
register0           EQU                     0x0084
register1           EQU                     register0 + 0x02
register2           EQU                     register0 + 0x04
register3           EQU                     register0 + 0x06
register4           EQU                     register0 + 0x08
register5           EQU                     register0 + 0x0A
register6           EQU                     register0 + 0x0C
register7           EQU                     register0 + 0x0E
register8           EQU                     register0 + 0x10
register9           EQU                     register0 + 0x12
register10          EQU                     0x0024
register11          EQU                     0x0026
register12          EQU                     0x0028
register13          EQU                     0x002A
fgbgColour          EQU                     register0 + 0x14
cursorXY            EQU                     register0 + 0x16
midiStream          EQU                     register0 + 0x18
midiDelay           EQU                     register0 + 0x1A
frameCountPrev      EQU                     register0 + 0x1C
miscFlags           EQU                     register0 + 0x1E

; Includes
%include            include/gigatron.i
%include            include/macros.i

; Labels
_entryPoint_        EQU                     0x0200
_10                 EQU                     0x022f
_20                 EQU                     0x023b
_30                 EQU                     0x0246
_40                 EQU                     0x025d
_50                 EQU                     0x0274
_60                 EQU                     0x0284
_70                 EQU                     0x0295
_80                 EQU                     0x02a5
_end_0x02f4         EQU                     0x02b6

; Variables
_x                  EQU                     0x0030
_y                  EQU                     0x0032
_u                  EQU                     0x0034
_v                  EQU                     0x0036
_w                  EQU                     0x0038

; Strings

; Lookup Tables

; Code
_entryPoint_        Initialise              
                    InitEqOp                
                    InitNeOp                
                    InitLeOp                
                    InitGeOp                
                    InitLtOp                
                    InitGtOp                                                ; INIT

_10                 LDI                     80
                    STW                     _x
                    LDI                     60
                    STW                     _y
                    LDI                     45
                    STW                     _u                              ; x=80:y=60:u=45:'Radius

_20                 LDWI                    clearVertBlinds
                    CALL                    giga_vAC
                    LDI                     0
                    STW                     _v
                    STW                     _w                              ; cls:v=0:w=v

_30                 LDW                     _x
                    SUBW                    _v
                    STW                     drawVLine_x1
                    LDW                     _y
                    SUBW                    _u
                    STW                     drawVLine_y1
                    LDW                     _y
                    ADDW                    _u
                    STW                     drawVLine_y2
                    DrawVLine                                               ; vline x-v, y-u, y+u

_40                 LDW                     _x
                    ADDW                    _v
                    STW                     drawVLine_x1
                    LDW                     _y
                    SUBW                    _u
                    STW                     drawVLine_y1
                    LDW                     _y
                    ADDW                    _u
                    STW                     drawVLine_y2
                    DrawVLine                                               ; vline x+v, y-u, y+u

_50                 LDW                     _w
                    ADDW                    _v
                    ADDW                    _v
                    ADDI                    1
                    STW                     _w
                    LDW                     _v
                    ADDI                    1
                    STW                     _v                              ; w=w+v+v+1:v=v+1

_60                 LDW                     _w
                    CALL                    convertLtOpAddr
                    PageJumpBEQ             _70
                    LDWI                    _30
                    CALL                    giga_vAC                        ; if w<0 then goto 30

_70                 LDW                     _w
                    SUBW                    _u
                    SUBW                    _u
                    ADDI                    1
                    STW                     _w
                    LDW                     _u
                    SUBI                    1
                    STW                     _u                              ; w=w-u-u+1:u=u-1

_80                 LDW                     _u
                    CALL                    convertGtOpAddr
                    PageJumpBEQ             _end_0x02f4
                    LDWI                    _60
                    CALL                    giga_vAC                        ; if u>0 then goto 60

_end_0x02f4         BRA                     _end_0x02f4                     ; END



