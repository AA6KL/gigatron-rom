[def
  {Step 1: Calculate road curvature from bottom line up}

  $f000 X= {X position * 256}
  95 [do Y=
    $08a0 Y+ p=
    X>? p!         { *($8a0+Y) = X>>8 }
    X DX+ X=
    Y 1- if>=0loop]

  {Step 2: Update video table from top line down}

  $08ff peek LastX= 0 LastX- LastX= {Keeps bottom line at fixed position}
  $2000 SegmentY= {Start with smallest segment}
  $0130 p=        {Video table start of road}
  0 Y=
  [do
    {High address}
    \invTable Y+ 12; phase+ 8& [if<>0 $30] Hue= {for $2000 or $5000}
    SegmentY>? Hue+ p! p<++

    {Low address}
    $08a0 Y+ q=         {*q is the desired absolute X offset}
    peek LastX- p! p<++

    q? LastX=

    SegmentY $80+ SegmentY=

    Y 1+ Y= 96^ if<>0loop]

  ret
] DrawRoad=

{--- Run ---}

Intro call
SetupRoad call

2 Delay=
0 phase=
[do
  phase 128& [if=0 phase else phase 255^] 64- 96- DX=
  DrawRoad call
  phase<++
  Wait call
  loop]

